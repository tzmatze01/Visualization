<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.layout.VBox?>

<?import javafx.geometry.Insets?>
<BorderPane maxHeight="800.0" maxWidth="1200.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="htw.controller.Controller">


        <center>
            <Canvas fx:id="canvas"></Canvas>

        </center>
        <bottom>
            <VBox>
                <padding>
                    <Insets top="25" left="25" right="25" bottom="25"/>
                </padding>
                <Button fx:id="button" onAction="#buttonClick"></Button>
                <Slider fx:id="slider"></Slider>
            </VBox>
        </bottom>


</BorderPane>