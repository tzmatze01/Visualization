<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane maxHeight="800.0" maxWidth="1200.0" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="htw.controller.Controller">


        <center>
            <Canvas fx:id="canvas" />

        </center>
        <bottom>
            <VBox spacing="25.0">
                <padding>
                    <Insets bottom="25" left="25" right="25" top="25" />
                </padding>
         <ComboBox fx:id="menuEntries" onAction="#chooseMenuEntry" prefWidth="150.0" promptText="choose Test" />
                <Slider fx:id="slider" />
                <Button fx:id="button" onAction="#buttonClick" />
         <Label fx:id="resultLabel" text="result">
            <VBox.margin>
               <Insets bottom="10.0" />
            </VBox.margin>
         </Label>
            </VBox>
        </bottom>


</BorderPane>
